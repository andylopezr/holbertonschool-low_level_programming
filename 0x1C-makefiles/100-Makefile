#using all rule - with variables
CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
#deletes all emacs temp files with exe
clean:
	$(RM) *~ $(NAME)
#deletes the .o files
oclean:
	$(RM) $(OBJ)
#deletes emacs temp files tue exe and .o files
fclean: clean oclean
#forces recompilation of all source files
re: oclean all
#to refer to only actions and not files with same name
.PHONY: all clean ocean clean fclean re
